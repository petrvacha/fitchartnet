{form newPasswordForm}
    <p n:foreach="$form->errors as $error" id="login-alert" class="alert alert-danger col-sm-12">{$error}</p>
    <div class="form-group">
        <div class="form-label-group">
            {input password}
            {label password /}
        </div>
    </div>
    <div class="form-group">
        <div class="form-label-group">
            {input confirm_password}
            {label confirm_password /}
        </div>
    </div>
    {input submit}
{/form}
