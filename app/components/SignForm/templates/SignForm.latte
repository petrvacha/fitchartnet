{form signForm}
    <div n:foreach="$form->errors as $error" id="login-alert" class="alert alert-danger col-sm-12">{$error}</div>

    <div class="form-group">
        <div class="form-label-group">
            {input username}
            {label username /}
        </div>
    </div>

    <div class="form-group">
        <div class="form-label-group">
            {input password}
            {label password /}
        </div>
    </div>

    {input submit}

{/form}